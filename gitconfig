[user]
    name = Michael Markert
    email = markert.michael@gmail.com
[color]
    status = auto
    branch = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = kdiff3
[diff]
    tool = gvimdiff
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dfc = diff --cached
    gdf = difftool
    mg = merge
    gmg = mergetool
    l1 = log HEAD^1..
    lg = log -p
    pom = pull origin master
    pum = push origin master
    stats = shortlog -s -n -e --no-merges
