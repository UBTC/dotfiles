[user]
    name = Michael Markert
    email = markert.michael@googlemail.com
    signingkey = Michael Markert <markert.michael@googlemail.com>

[core]
    whitespace = fix,-indent-with-non-tab,trailing-space

[apply]
    whitespace = fix

[branch]
    autosetupmerge = true

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    ui = auto
    pager = false
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[color "interactive"]
    error = cyan
    header = yellow

[mergetool "ediff-windowed"]
    cmd = emacsclient -c --eval \"(ediff-git-merge-emacsclient \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\" t)\"
    trustExitCode = true

[mergetool "ediff-term"]
    cmd = emacsclient -nw --eval \"(ediff-git-merge-emacsclient \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\" t)\"
    trustExitCode = true

[merge]
    tool = ediff-windowed

[diff]
    tool = gvimdiff
    renames = copy
[alias]
    ad = add
    ap = add -p
    ai = add -i
    pl = pull
    pr = pull --rebase
    ps = push
    fe = fetch
    st = status
    ci = commit
    br = branch
    co = checkout
    d1 = diff HEAD^1..
    df = diff
    dfc = diff --cached
    wd1 = diff --word-diff=color HEAD^1.. #word-diff from last commit
    wdf = diff --word-diff=color          #word-diff
    wdfc = diff --word-diff=color --cached # word-diff cached
    gdf = difftool
    gdfc = difftool --cached
    mg = merge
    gmg = mergetool
    vu = ls-files -u                    #view unmerged files
    l1 = log HEAD^1..                   #last commit
    l5 = log HEAD^5..                   # last 5 commits
    l5o = log --pretty=oneline HEAD^5.. # last 5 commits onlined
    lp = log -p
    slog = log --pretty=format:\"%h - %cr - %s (%cn)\"
    stats = shortlog -s -n -e --no-merges
    in = incoming
    out = outgoing
    addr = addremove
    amend = commit --amend -C HEAD
    amendc = commit --amend
    tree = log --graph --pretty=oneline --decorate
    ls-ignored = ls-files --exclude-standard --ignored --others
