[user]
    name = Michael Markert
    email = markert.michael@gmail.com
[color]
    status = auto
    branch = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = kdiff3
[diff]
    tool = gvimdiff
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dfc = diff --cached
    gdf = difftool
    gdfc = difftool --cached
    mg = merge
    gmg = mergetool
    l1 = log HEAD^1..
    lg = log -p
    stats = shortlog -s -n -e --no-merges
    incoming = !git-incoming
    outgoing = !git-outgoing
    addremove = !git-addremove
    in = incoming
    out = outgoing
    addr = addremove
