set from = "markert.michael@gmail.com"
set realname = "Michael Markert"
set use_from = yes
set envelope_from = yes

set edit_headers = yes
set allow_8bit = yes

set fast_reply

set editor='vim + -c "set filetype=mail"'
set charset = "utf-8"
set assumed_charset = "us-ascii:iso-8859-1:iso-8859-15:utf-8"
set attach_charset = "us-ascii:iso-8859-1:iso-8859-15:utf-8"
set send_charset = "us-ascii:iso-8859-1:iso-8859-15:utf-8"

set header_cache = ~/.mutt_local/cache/headers
set message_cachedir = ~/.mutt_local/cache/bodies
set certificate_file = ~/.mutt_local/certificates

set move = no

hdr_order Date From To Cc
set sort = 'threads'
set sort_aux = 'last-date-received'

#ignore all but basic Headers
hdr_order From: Date: User-Agent: X-Mailer To: Cc: Reply-to: Subject:
ignore *
unignore From: To: Subject: CC: Reply-to: Date: User-Agent: X-Mailer

#abook settings
set query_command = "abook --mutt-query '%s'"
macro generic,index,pager ab "<shell-escape>abook<return>" "launch abook"
macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"

source ~/.mutt/folders
source ~/.mutt/colors
source ~/.mutt/macros
source ~/.mutt_local/accounts
