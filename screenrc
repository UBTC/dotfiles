caption always "%{= kG}%-w%L>%{= kR}%n %t%{-}%52<%+w %L="

hardstatus alwayslastline
hardstatus string "$LOGNAME@%H %= %Y-%m-%d %0c:%s"

termcapinfo xterm*|rxvt*|k*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\00
termcapinfo rxvt* OL=10000

term screen-256color
terminfo rxvt* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

shell                 zsh

autodetach            on
zombie                cr
crlf                  off
deflogin              off
nethack               on
startup_message       off
vbell                 on
altscreen             on
defutf8               on

defscrollback         50000
silencewait           15

hardcopydir           $HOME/.hardcopy

# use %n to display the window number and %t for its title:
activity              "activity in %n (%t) [%w:%s]~"

pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

vbell_msg             " * He said Jehova! * "

bind ^k
bind .
bind ^\
bind \\
bind ^h

bind 'h' hardcopy
bind 'k' kill
bind 'I' login on
bind 'O' login off
bind '}' history

bind X lockscreen

screen -t IRC   weechat-curses
screen -t Mail  mutt
screen -t Zsh   zsh
screen -t Zsh   zsh
