       , template = "%StdinReader% }{ %wlan0wi% | %THM0% | %multicpu% <fc=purle>|</fc> %memory% - %swap% <fc=purple>|</fc> ⚡ %battery% <fc=purple>|</fc> <fc=forestgreen>%date%</fc>"
       }
