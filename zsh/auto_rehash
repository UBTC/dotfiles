# -*- mode: sh -*-

emulate -L zsh

rehash_preexec() {
    case "$1" in
        # debian
        *apt-get*|*aptitude*)
            ;&                  # fall through
        # python
        *pip*)
            ;&                  # fall through
        # hakell
        *cabal*)
            __rehash=1
            ;;
    esac
}

rehash_precmd() {
    if [[ -n __rehash ]]; then
        rehash
        unset __rehash
    fi
}
typeset -ga preexec_functions
typeset -ga precmd_functions
preexec_functions+=rehash_preexec
precmd_functions+=rehash_precmd
